{
  "name": "focipedia",
  "version": "1.0.0",
  "description": "Focipedia - Football Statistics Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "preinstall": "node ./scripts/preinstall.js",
    "install": "pnpm -w install",
    "build": "pnpm -r run build",
    "dev": "./restart-dev.sh",
    "dev:workspace": "pnpm -r run dev",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "clean": "pnpm -r run clean",
    "type-check": "pnpm -r run type-check",
    "prepare": "husky install || true",
    "lint:fix": "pnpm -r run lint --if-present -- --fix || true",
    "format": "prettier -w ."
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,css,scss,mdx}": [
      "prettier -w"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=9"
  },
  "engineStrict": true,
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
